@model CustomLogin_MVC.Models.Thread

@{
    ViewBag.Title = "Delete";
}


<h3>Are you sure you want to delete this question?</h3>
<h2>@Html.DisplayFor(model => model.Threadtitle)</h2>
<div>
   
    <hr />
    <dl class="dl-horizontal">
       

        <dt>
            Question
        </dt>

        <dd>
            @Html.Raw(Model.ThreadText)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <input type="submit" value="Delete" class="btn btn-primary btn-md" /> |
            @Html.ActionLink("Back to Question", "../Replies/ShowReplies",new { threadId=Model.ThreadId})
        </div>
    }
</div>
